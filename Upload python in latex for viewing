
\usepackage{listings}
\usepackage{xcolor}
\lstdefinestyle{mystyle}{
    backgroundcolor=\color{white},   
    commentstyle=\color{green},
    keywordstyle=\color{blue},
    numberstyle=\tiny\color{gray},
    stringstyle=\color{red},
    basicstyle=\ttfamily\footnotesize,
    breakatwhitespace=false,
    breaklines=true,
    captionpos=b,
    keepspaces=true,
    numbers=left,
    numbersep=5pt,
    showspaces=false,
    showstringspaces=false,
    showtabs=false,
    tabsize=2}

\begin{document}
\lstset{style=mystyle}
\lstinputlisting[language=Python, caption=Example Python code]{path/to/your/python/file.py}
\end{document}


% ============================================================================================ %



\documentclass{article}
\usepackage{listings} % Package for code listing
\usepackage{xcolor}   % Package for color

% Define style for Python code
\lstdefinestyle{mystyle}{
    backgroundcolor=\color{white},   
    commentstyle=\color{green},
    keywordstyle=\color{blue},
    numberstyle=\tiny\color{gray},
    stringstyle=\color{red},
    basicstyle=\ttfamily\footnotesize,
    breakatwhitespace=false,
    breaklines=true,
    captionpos=b,
    keepspaces=true,
    numbers=left,
    numbersep=5pt,
    showspaces=false,
    showstringspaces=false,
    showtabs=false,
    tabsize=2
}

\begin{document}

\title{Including Python Code in LaTeX}
\author{Your Name}
\date{\today}
\maketitle

\section{Python Code}

% Set style for listings
\lstset{style=mystyle}

% Include Python code directly
\begin{lstlisting}[language=Python, caption=Example Python code]
def hello_world():
    print("Hello, World!")
\end{lstlisting}

\end{document}



% ============================================================================================ %



 \documentclass{article}
\usepackage{listings} % Package for code listing
\usepackage{xcolor}   % Package for color
\usepackage{tcolorbox} % Package for creating colored boxes

% Define style for Python code
\lstdefinestyle{mystyle}{
    backgroundcolor=\color{white},   
    commentstyle=\color{green},
    keywordstyle=\color{blue},
    numberstyle=\tiny\color{gray},
    stringstyle=\color{red},
    basicstyle=\ttfamily\footnotesize,
    breakatwhitespace=false,
    breaklines=true,
    captionpos=b,
    keepspaces=true,
    numbers=left,
    numbersep=5pt,
    showspaces=false,
    showstringspaces=false,
    showtabs=false,
    tabsize=2
}

% Define a new tcolorbox environment for code listings
\newtcolorbox{codebox}[2]{
    colback=white,
    colframe=black,
    coltitle=black,
    fonttitle=\bfseries,
    title=#2
}

\begin{document}

\title{Including Python Code in LaTeX}
\author{Your Name}
\date{\today}
\maketitle

\section{Python Code}

% Set style for listings
\lstset{style=mystyle}

% Include Python code from external file within a bordered box
\begin{codebox}{Example Python code}{Path to Python file: \texttt{path/to/your/python/file.py}}
\lstinputlisting[language=Python]{path/to/your/python/file.py}
\end{codebox}

\end{document}
